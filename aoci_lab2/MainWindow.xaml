<Window x:Class="aoci_lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aoci_lab2"
        mc:Ignorable="d"
        Title="Лабораторная работа #2. Редактор цветовых пространств" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <StackPanel Margin="5">

                <Button Content="Открыть изображение" Click="LoadImage_Click" Margin="0,0,0,5" FontWeight="Bold"/>
                <Button Content="Сохранить изображение" Click="SaveImage_Click" Margin="0,0,0,20" FontWeight="Bold"/>

                <Border BorderBrush="DimGray" BorderThickness="1" Margin="5">
                    <StackPanel>
                        <Label Content="Изменения в HSV" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                        <Label Content="Яркость"/>
                        <Slider Minimum="-255" Maximum="255" Value="0" Name="BrightnessHSVSlider" ValueChanged="OnHSVFilterChanged" SmallChange="1" LargeChange="10" Margin="0,0,0,20"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <Image Name="MainImage"  Margin="5" Stretch="Uniform"/>
        </Border>

    </Grid>
</Window>
